<Window x:Class="Gestor_de_tasks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gestor_de_tasks"
        mc:Ignorable="d"
        Title="Task Gestor" Height="210.31" Width="246.392">
    <Grid Margin="0,0,19,15" RenderTransformOrigin="0.5,0.5">
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform Angle="-0.113"/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.RenderTransform>
        <TextBox x:Name="Tasktb" HorizontalAlignment="Left" Height="23" Margin="63,45,0,0" TextWrapping="Wrap" Text="Digite o nome da task" VerticalAlignment="Top" Width="145" SelectionOpacity="20"/>
        <Label x:Name="Tasklb" Content="Task:" HorizontalAlignment="Left" Margin="23,41,0,0" VerticalAlignment="Top" Cursor="None" RenderTransformOrigin="0.513,-1.238"/>
        <Button x:Name="Taskbt" Content="Iniciar" HorizontalAlignment="Left" Margin="78,98,0,37" Width="75" RenderTransformOrigin="-0.384,-1.319"/>

    </Grid>
</Window>
